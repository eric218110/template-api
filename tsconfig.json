{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@controllers/*": [
        "./src/source/controllers/*"
      ],
      "@services/*": [
        "./src/source/services/*"
      ],
      "@entitys/*": [
        "./src/database/entitys/*"
      ],
      "@logger": [
        "./src/common/logger/index.ts"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}